<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:background="?attr/selectableItemBackground"
    tools:context=".view.BusStationListAdapter">

    <Button
        android:id="@+id/left_wall"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_marginTop="1dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/left_wall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/row_id"
        tools:text="7호선 가산 디지털단지역"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/left_wall"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_name"
        app:layout_constraintBottom_toTopOf="@+id/row_region"
        tools:text="18999"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:singleLine="true"
        android:textAlignment="textStart"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintStart_toEndOf="@+id/left_wall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/row_id"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="서울"/>


</androidx.constraintlayout.widget.ConstraintLayout>
